<%= form_tag("/compare", method: "get", :class => 'form-horizontal') do %>
  <fieldset>
    <legend>Compare Lineups!</legend>
    <div class="form-group">
      <div class="col-lg-5">
				<%= select_tag(:fest1, options_for_select(@festivals.collect {|fest| [fest.name, fest.id]}, 1), :class => "form-control", :id => "select") %>
      </div>

			<div class="col-lg-5">
      	<%= select_tag(:fest2, options_for_select(@festivals.collect {|fest| [fest.name, fest.id]}, 2), :class => "form-control", :id => "select") %>
    	</div>
      
      <%= submit_tag("Compare", :class => "btn btn-primary") %>
    	
    </div>
  </fieldset>
<% end %>


<h2>Or, see where your favorite artists are playing:</h2>
<%= render 'artists/artists' %>
