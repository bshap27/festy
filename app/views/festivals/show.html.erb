<img src="<%= @festival.img_url %>">
<h4>Begins: <%= @festival.start_date.strftime("%m/%d") %> | Ends: <%= @festival.end_date.strftime("%m/%d") %></h4>

<h3><%= @festival.artists.count %> artists are playing at <%= @festival.name %>:</h3>
<% @festival.artists.each do |a| %>
	<li><%= link_to a.name, a %></li>
<% end %>

<h3>Compare lineup to other festivals:</h3>

<%= form_tag("/compare", method: "get") do %>
	<%= hidden_field_tag(:fest1, value = @festival.id) %>
	<%= select_tag(:fest2, options_for_select(@festivals.collect {|fest| [fest.name, fest.id] unless fest == @festival}.compact)) %>
  <%= submit_tag("Compare") %>
<% end %>