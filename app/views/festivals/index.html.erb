<h2>Compare Lineups!</h2>
<%= form_tag("/compare", method: "get") do %>
	<%= select_tag(:fest1, options_for_select(@festivals.collect {|fest| [fest.name, fest.id]})) %>
	<%= select_tag(:fest2, options_for_select(@festivals.collect {|fest| [fest.name, fest.id]}, 2)) %>
  <%= submit_tag("Compare") %>
<% end %>

<h2>Upcoming Festivals:</h2>

<table style="width:100%">
  <tr>
  	<th></th>
  	<th>Location</th>
  	<th>Start Date</th>
  	<th>End Date</th>
  </tr>
	<% @festivals.each do |festival| %>
	  <tr>
			<td><%= link_to festival.name, festival %></td>
			<td></td>
			<td><%= festival.start_date.strftime("%m/%d") %></td>
			<td><%= festival.end_date.strftime("%m/%d") %></td>
		</tr>
	<% end %>
</table>